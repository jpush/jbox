<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.jiguang.jbox.channel.ChannelActivity">

    <com.jiguang.jbox.view.TopBar
        android:id="@+id/topBar"
        android:layout_width="match_parent"
        android:layout_height="@dimen/widget_height"
        android:background="@color/colorPrimary"
        app:show_left="true"
        app:topbar_title="@string/channel_title"
        />

    <ListView
        android:id="@+id/lv_channel"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:listitem="@layout/item_subscribe_channel"
        />

    <TextView
        android:id="@+id/tv_hint"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:text="@string/channel_no_hint"
        android:visibility="gone"
        />
</LinearLayout>
